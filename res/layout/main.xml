<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="30dip"
    >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ANDROID_ID"
            android:textAppearance="@android:style/TextAppearance.Large"
            />

    <TextView
            android:id="@+id/androidid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="deviceid"
            android:textAppearance="@android:style/TextAppearance.Medium"
/>


    <TextView
            android:layout_marginTop="20dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="WiFi MAC address"
            android:textAppearance="@android:style/TextAppearance.Large"
            />

    <TextView
            android:id="@+id/macaddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="macaddress"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />

    <TextView
            android:layout_marginTop="20dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hardware Serial Number"
            android:textAppearance="@android:style/TextAppearance.Large"
            />

    <TextView
            android:id="@+id/serial"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="serial"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />

    <TextView
            android:layout_marginTop="20dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Screen size"
            android:textAppearance="@android:style/TextAppearance.Large"
            />

    <TextView
            android:id="@+id/screen_size"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="size"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />

</LinearLayout>

